                <Button x:Name="a" Text="{i18n:Translate NAVIGATION_STRING}" FontSize="32" Grid.Column="0"/>
                <Button x:Name="b" Text="{i18n:Translate OPFM_STRING}" FontSize="26" Grid.Column="1"/>
            </Grid>
