            <!--#endregion--><!--
            <Label Grid.Row="0" 
				   Grid.Column="0"  
				   Grid.ColumnSpan="2" 
				   HorizontalOptions="StartAndExpand" 
				   Text="{i18n:Translate DESTINATION_STRING}" 
				   FontSize="Large" 
				   LineBreakMode="WordWrap"/>
				   
            <Label 	x:Name="DestinationWaypointLabel" 
					Text="{Binding DestinationWaypointName}"
					Grid.Row="0" 
					Grid.Column="1" 
					Grid.ColumnSpan="3" 
					FontSize="Large" 
					LineBreakMode="WordWrap" 
					HorizontalOptions="StartAndExpand"/>
            
            <Label Grid.Row="1" 
				   Grid.Column="0" 
				   Grid.ColumnSpan="2" 
				   HorizontalOptions="StartAndExpand" 
				   Text="{i18n:Translate CURRENT_LOCATION_STRING}" 
				   FontSize="Large" 
				   LineBreakMode="WordWrap"/>
				   
            <Label x:Name="CurrentWaypointLabel" 
				   Text="{Binding CurrentWaypointName}"
                   Grid.Row="1" 
				   Grid.Column="1" 
				   Grid.ColumnSpan="3" 
				   FontSize="Large" 
				   LineBreakMode="WordWrap" 
				   HorizontalOptions="StartAndExpand"/>
            
            <Label x:Name="CurrentInstructionLabel" 
                   Text="{Binding CurrentStepLabel}"
                   Grid.Row="2" 
				   Grid.RowSpan="{Binding InstructionScaleValue}" 
				   Grid.Column="1" 
				   Grid.ColumnSpan="3" 
                   Margin="0, 5, 5, 5"
                   FontSize="30" 
				   LineBreakMode="WordWrap"
                   VerticalTextAlignment="Center"
                   VerticalOptions="StartAndExpand"
                   HorizontalOptions="FillAndExpand"
                   HorizontalTextAlignment="Center"/>
            
            <Image x:Name="CurrentInstructionImage" 
                   Source="{Binding CurrentStepImage}" 
				   IsAnimationPlaying="{Binding isPlaying}"
                   Grid.Row="2" 
				   Grid.Column="0" 
				   Grid.RowSpan="{Binding InstructionScaleValue}" 
				   VerticalOptions="StartAndExpand"
                   Margin="0,5, 5, 5" 
				   Scale="1"/>
            
            
            <BoxView Grid.Row="7" 
					 Grid.ColumnSpan="4" 
					 Color="#dcdcdc" 
					 VerticalOptions="EndAndExpand" />
					 
            <pb:ProgressBarView Grid.Row="7" 
								Grid.ColumnSpan="4"
                                Color="Red" 
								Progress="{Binding NavigationProgress}"
                                LabelShowIntValuesOnly="false" 
								LabelStringFormat=""
                                LabelFontSize="20"                              
								LabelPosition="End" 
								VerticalOptions="FillAndExpand" />
								
            <Label Text="{Binding ProgressBar}" 
				   Grid.Row="7" 
				   Grid.ColumnSpan="4" 
				   HorizontalTextAlignment="End"  
				   FontSize="25"/>
				   
            <Image x:Name="FirstDirectionPicture"
                   Source="{Binding FirstDirectionPicture}"
                   Grid.Row="3" 
				   Grid.Column="0" 
				   Grid.ColumnSpan="4" 
				   Grid.RowSpan="5" 
				   HorizontalOptions="FillAndExpand" 
				   VerticalOptions="FillAndExpand"
                   Aspect="Fill"
                   Scale="1.3" 
				   Margin="5,0,0,0 " />

            --><!--<Button x:Name="FinishButton"
                    Grid.Row="6"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
