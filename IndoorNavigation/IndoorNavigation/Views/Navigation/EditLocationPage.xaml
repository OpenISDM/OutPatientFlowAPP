    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <SearchBar x:Name="AddNewSite" 
                       Placeholder="Search" 
                       FontSize="Large" 
                       VerticalOptions="CenterAndExpand" 
                       TextChanged="AddNewSite_TextChanged"  
                       Grid.Row="0"/>
            
            <ListView x:Name="AddNewSiteListView" Grid.Row="1" ItemSelected="AddNewSiteListView_ItemSelected" ItemTapped="AddNewSiteListView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10,10,10,10">
                                <Label x:Name="AddSiteLabel" 
                                       Text="{Binding _displayNme}"                                                   
                                       FontSize="Large"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
        </Grid>
