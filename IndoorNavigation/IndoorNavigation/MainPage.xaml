<?xml version="1.0" encoding="utf-8" ?>
<local:CustomToolbarContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IndoorNavigation"
             x:Class="IndoorNavigation.MainPage"
             xmlns:i18n="clr-namespace:IndoorNavigation.Resources.Helpers"
             
             Title="{i18n:Translate LOCATION_STRING}">
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <OnPlatform.Platforms>
                <On Platform="iOS" Value="0, 0, 0, 25" />
                <On Platform="Android" Value="0, 0, 0, 0" />
                <On Platform="UWP" Value="0, 0, 0, 0" />
            </OnPlatform.Platforms>
        </OnPlatform>
    </ContentPage.Padding>
    
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Text="{i18n:Translate SETTING_STRING}" Order="Secondary" 
                     Clicked="SettingBtn_Clicked"/>
        <ToolbarItem x:Name="EditToolbarItem" Text="新增" Priority="1" 
                     Order="Primary" Clicked="AddNaviGraphButton_Clicked"/>
    </ContentPage.ToolbarItems>-->
    
    <ContentPage.Content>
        <AbsoluteLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

                <SearchBar x:Name="NaviSearchBar" Grid.Row="0" 
                       Placeholder="{i18n:Translate SELECT_LOCATION_STRING}"
                       CancelButtonColor="#007BFF"
                       Text="{Binding SearchedText, Mode=TwoWay}"
                       BackgroundColor="#f0f0f0"
                       VerticalOptions="StartAndExpand"
                       FontSize="Large"/>
            
                <ListView x:Name="LocationListView" Grid.Row="1" Grid.RowSpan="2"
                      ItemsSource="{Binding NavigationGraphFiles}"
                      Margin="10, -8, 10,10" HasUnevenRows="true"
                      ItemTapped="Handle_ItemTapped"
                      SelectedItem="LocationListView_ItemSelected"
                      IsPullToRefreshEnabled="true"                      
                      Refreshing="LocationListView_Refreshing">
                
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Tapped="ViewCell_Tapped">
                            <ViewCell.ContextActions>
                                <MenuItem Clicked="Item_Delete" CommandParameter="{Binding .}"
                                   Text="Delete" IsDestructive="True" />
                             </ViewCell.ContextActions>
                            
                            <StackLayout Orientation="Horizontal"
                                         Padding="20, 20, 20, 1">
                                
                                <!--<Label Text="ICON"/>-->
                             <!--   <Image Source="location_icon.png"
                                       Margin="-5, 1, -1, 15"
                                       VerticalOptions="Start"
                                       Scale="0.5"/>-->
                                
                                    <Label  Text="{Binding UserNaming}" 
                                        HorizontalOptions="Start" 
                                        VerticalOptions="Center"
                                       TextColor="#3F51B5" Margin="0, 0, 1, 10" 
                                           FontSize="32"/>
                                    
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                
                </ListView>
            
            </Grid>
            <!--<Button x:Name="AddNaviGraphButton"
                    Text="新增"                    
                    FontAttributes="Bold"
                    Clicked="AddNaviGraphButton_Clicked"
                    FontSize="Medium"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    BackgroundColor="#3f51b5"
                    TextColor="White"
                    CornerRadius="35"
                    AbsoluteLayout.LayoutBounds="0.96,0.9,70,70"/>-->
        </AbsoluteLayout>
    </ContentPage.Content>

</local:CustomToolbarContentPage>
